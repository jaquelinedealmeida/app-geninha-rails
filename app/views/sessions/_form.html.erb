<%= form_with model: session do |form| %>
    <div>
       <%= form.label :title %><br><br>
       <%= form.text_field :title %><br><br><br>
       <% session.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :date %><br><br>
        <%= form.datetime_select :date %><br><br><br>
        <% session.errors.full_messages_for(:date).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>