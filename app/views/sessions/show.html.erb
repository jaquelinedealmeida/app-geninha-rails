<h3>👧🏽 <%= @session.title %></h3>

<h4> ✐ Anote o seu horario de atendimento:</h4>

<%= @session.date %>

<ul> 
    <li><%= link_to "Edit", edit_session_path(@session) %></li>
    <li><%= link_to "Delete", session_path(@session), data:
                    { turbo_method: :delete,
                        turbo_confirm: "Are you sure?" ,
                    } %></li>
</ul>

<h2> 🧑🏾‍⚕️ Add a participant </h2>
<%= form_with model: [ @session, @session.participants.build ] do |form| %>
    <p> 
        <%= form.label :participant %><br>
        <%= form.text_field :participant %>
    </p>
    <p>
        <%= form.label :role %><br>
        <%= form.text_field :role %>
    </p>

<p>    
    <%= form.submit %>
</p>
<% end %>