
<% unless participant.archived? %>
    <p>
      <strong>Participants:</strong>
      <%= participant.participants%>
    </p>
    <p>
      <strong>Role:</strong>
      <%= participant.role%>
    </p>

    <ul> 
        <%= link_to 'Delete participant', [participant.session, participant], data:
                    { turbo_method: :delete,
                        turbo_confirm: "Are you sure?" ,
                    } %>
    </ul>
<% end %>
